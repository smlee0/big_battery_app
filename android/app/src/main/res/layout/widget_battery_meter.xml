<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg"
    android:clickable="true"
    android:focusable="true"
    android:foregroundGravity="center">

    <LinearLayout
        android:id="@+id/widgetContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/widgetPercentageRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widgetPercentageValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="--"
                android:textColor="@android:color/white"
                android:textSize="42sp"
                android:textStyle="bold"
                android:letterSpacing="-0.03" />

            <TextView
                android:id="@+id/widgetPercentageSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:layout_marginStart="2dp"
                android:text="%"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/widgetProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="16dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/widget_progress" />

    </LinearLayout>

    <ImageView
        android:id="@+id/widgetChargeBadge"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="top|start"
        android:layout_margin="12dp"
        android:contentDescription="@string/widget_charging_icon"
        android:scaleType="centerInside"
        android:src="@drawable/widget_charge_icon"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/widgetRefreshButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|end"
        android:layout_margin="12dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/widget_refresh_button"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/widget_refresh_icon" />

</FrameLayout>
